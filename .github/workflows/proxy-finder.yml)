name: SonyLIV Indian Proxy Finder

on:
  push:
    branches: [ main ]      # Triggers on push to help activate the UI
  workflow_dispatch:        # Enables the manual 'Run workflow' button
  schedule:
    - cron: '0 */2 * * *'   # Automatically runs every 2 hours

jobs:
  find-proxies:
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Scrape and Test Indian Proxies
        run: |
          TEST_URL="https://apiv4.sonyliv.com/AGL/4.7/A/ENG/MWEB/IN/BR/CONTENT/VIDEOURL/VOD/1000051729"
          
          echo "Scraping fresh Indian HTTP and SOCKS5 proxies..."
          # Scrapes fresh Indian elite proxies
          curl -s "https://api.proxyscrape.com/v2/?request=displayproxies&protocol=http,socks4,socks5&timeout=10000&country=IN&ssl=all&anonymity=elite" > raw_list.txt
          
          # Initialize the export file
          echo "Working Indian Proxies (Checked: $(date))" > working_proxies.txt
          echo "------------------------------------------------" >> working_proxies.txt
          
          FOUND_COUNT=0
          TEST_LIMIT=100

          while read -r PROXY && [ $FOUND_COUNT -lt 10 ]; do
            [[ -z "$PROXY" ]] && continue
            
            echo "Testing: $PROXY"
            
            # Using connect-timeout to skip dead proxies quickly
            # Checks for 'videoURL' and filters 'EPDblocked' (VPN detection)
            RESPONSE=$(curl -s -L --connect-timeout 5 --max-time 12 \
              --proxy "$PROXY" \
              -H 'User-Agent: Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36' \
              -H 'Referer: https://www.sonyliv.com/' \
              "$TEST_URL") || continue

            if [[ "$RESPONSE" == *"videoURL"* ]] && [[ "$RESPONSE" != *"EPDblocked"* ]]; then
              echo "MATCH FOUND: $PROXY"
              echo "$PROXY" >> working_proxies.txt
              ((FOUND_COUNT++))
            fi
            
            ((TEST_LIMIT--))
            [[ $TEST_LIMIT -le 0 ]] && break
          done < raw_list.txt

          if [ $FOUND_COUNT -eq 0 ]; then
            echo "No working proxies found in this batch."
            echo "None found in this run." >> working_proxies.txt
          fi

      - name: Commit and Push Results
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add working_proxies.txt
          git diff --staged --quiet || (git commit -m "Update working Indian proxies" && git push)
